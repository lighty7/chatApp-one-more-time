{
  "name": "chatterbox",
  "version": "2.0.0",
  "description": "Production-ready real-time chat application with Socket.io, MongoDB, Redis, and S3 support",
  "private": false,
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "worker": "node src/queue/worker.js",
    "test": "mocha --exit --timeout 10000 tests/*",
    "test:watch": "mocha --watch --timeout 10000 tests/*",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "lint:check": "eslint src/ --ext .js --format stylish || true",
    "security:check": "npm audit --audit-level high",
    "validate": "npm run lint:check && npm run test",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker/docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.dev.yml down",
    "docker:build": "docker build -f docker/Dockerfile -t chatterbox:latest ."
  },
  "keywords": [
    "chat",
    "real-time",
    "socket.io",
    "websocket",
    "nodejs",
    "express",
    "mongodb",
    "redis",
    "scaling"
  ],
  "author": "Qugates",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Qugates/chatterbox"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.8.3",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.8.1",
    "mongoose": "^8.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5"
  }
}
